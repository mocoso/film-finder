<%= form_tag '/', :method => :get do %>
  <label>Search</label>
  <%= text_field_tag :query, params[:query] %>
  <%= submit_tag 'Search for film' %>
<% end %>

<% if searched? %>
  <ol>
    <% search_results_grouped_by_film.each do |film, results| %>
      <li>
        <h3><%= results.first.title %></h3>
        <ol>
          <% results.sort_by(&:price_in_pence).each do |result| %>
            <li>
              <%= link_to "#{result.price} from #{result.service}", result.url %>
            </li>
          <% end %>
        </oL>
      </li>
    <% end %>
  </ol>
<% end %>
