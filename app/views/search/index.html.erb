<div class="page-header">
  <h1>Find a film <small>to watch online in the UK</small></h1>
</div>

<%= form_tag '/', :method => :get do %>
  <div class="input-append">
    <%= text_field_tag :query, params[:query], :placeholder => 'Film title' %>
    <%= button_tag 'Find Film', :class => 'btn btn-primary' %>
  </div>
<% end %>

<p>Searches <%= link_to 'BlinkBox', 'http://www.blinkbox.com/' %>,
<%= link_to 'Film4oD', 'http://film4od.film4.com/' %> and
<%=  link_to 'Google Play', 'https://play.google.com/store/movies' %> for the
film you want to watch.</p>

<% if searched? %>
  <hr />
  <% if films.present? %>
    <h2>Films matching '<%= params[:query] %>'</h2>
    <ol class="unstyled">
      <% films.each do |film| %>
        <li>
          <h3><%= film.title %></h3>
          <ul class="thumbnails">
            <% film.rentals.each do |rental| %>
              <li class="span2">
                <div class="thumbnail">
                  <h4><%= link_to rental.price, rental.url %></h4>
                  <p><%= link_to rental.service, rental.url %></p>
                  <%= link_to rental.url do %><%= image_tag rental.image_url, :alt => rental.title %><% end %>
                </div>
              </li>
            <% end %>
          </ul>
        </li>
      <% end %>
    </ol>
  <% else %>
    <h2>No films found for '<%= params[:query] %>'</h2>
  <% end %>
<% end %>

