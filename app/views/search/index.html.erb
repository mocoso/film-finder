<%= form_tag '/', :method => :get do %>
  <label>Search</label>
  <%= text_field_tag :query, params[:query] %>
  <%= submit_tag 'Search for film' %>
<% end %>

<% if searched? %>
  <ol>
    <% films.each do |film| %>
      <li>
        <h3><%= film.title %></h3>
        <ol>
          <% film.results.each do |result| %>
            <li>
              <%= link_to "#{result.price} from #{result.service}", result.url %>
            </li>
          <% end %>
        </oL>
      </li>
    <% end %>
  </ol>
<% end %>
